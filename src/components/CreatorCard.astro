---
import type { Creator } from '../lib/data';
import { getTipsByCreator } from '../lib/data';

interface Props {
  creator: Creator;
}

const { creator } = Astro.props;
const tips = getTipsByCreator(creator.id);
---

<a href={`/creators/${creator.slug}`} class="block group">
  <article class="border border-gray-200 rounded-lg p-4 hover:border-gray-400 hover:shadow-sm transition-all">
    <div class="flex items-start justify-between mb-2">
      <h3 class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors">
        {creator.name}
      </h3>
      <span class="text-xs text-gray-500 bg-gray-100 px-2 py-0.5 rounded-full">
        {tips.length} {tips.length === 1 ? 'tip' : 'tips'}
      </span>
    </div>
    <p class="text-sm text-gray-600 line-clamp-2">
      {creator.bio}
    </p>
    {(creator.twitter_handle || creator.website_url) && (
      <div class="mt-3 flex gap-3 text-xs text-gray-400">
        {creator.twitter_handle && (
          <span>@{creator.twitter_handle}</span>
        )}
        {creator.website_url && (
          <span>Web</span>
        )}
      </div>
    )}
  </article>
</a>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TipCard from '../../components/TipCard.astro';
import { creators, getCreatorBySlug, getTipsByCreator, getTopic, getTipCountsBySource, type SourceType } from '../../lib/data';

export function getStaticPaths() {
  return creators.map(creator => ({
    params: { slug: creator.slug },
  }));
}

const { slug } = Astro.params;
const creator = getCreatorBySlug(slug);

if (!creator) {
  return Astro.redirect('/404');
}

const tips = getTipsByCreator(creator.id);
const tipCountsBySource = getTipCountsBySource(creator.id);

// Source metadata for display
const sourceConfig: Record<SourceType, { label: string; icon: string; color: string }> = {
  twitter: { label: 'Twitter/X', icon: 'ð•', color: 'text-gray-900' },
  linkedin: { label: 'LinkedIn', icon: 'ðŸ”—', color: 'text-blue-700' },
  youtube: { label: 'YouTube', icon: 'â–¶', color: 'text-red-600' },
  blog: { label: 'Blog', icon: 'ðŸ“', color: 'text-gray-700' },
};

// Get sources that have tips, sorted by count descending
const activeSources = (Object.entries(tipCountsBySource) as [SourceType, number][])
  .filter(([_, count]) => count > 0)
  .sort((a, b) => b[1] - a[1]);

// Group tips by topic
const tipsByTopic = tips.reduce((acc, tip) => {
  tip.topic_ids.forEach(topicId => {
    const topic = getTopic(topicId);
    if (topic) {
      if (!acc[topic.name]) {
        acc[topic.name] = [];
      }
      if (!acc[topic.name].find(t => t.id === tip.id)) {
        acc[topic.name].push(tip);
      }
    }
  });
  return acc;
}, {} as Record<string, typeof tips>);

const topicNames = Object.keys(tipsByTopic).sort();
---

<BaseLayout
  title={`${creator.name} â€” AI Tips`}
  description={`${tips.length} AI tips from ${creator.name}. ${creator.bio}`}
>
  <div class="space-y-8">
    <!-- Header -->
    <header>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">{creator.name}</h1>
      <p class="text-gray-600 mb-4">{creator.bio}</p>

      <!-- Platform links -->
      <div class="flex flex-wrap gap-3 text-sm">
        {creator.twitter_handle && (
          <a
            href={`https://twitter.com/${creator.twitter_handle}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            @{creator.twitter_handle}
          </a>
        )}
        {creator.linkedin_url && (
          <a
            href={creator.linkedin_url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            LinkedIn
          </a>
        )}
        {creator.youtube_channel && (
          <a
            href={creator.youtube_channel}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            YouTube
          </a>
        )}
        {creator.website_url && (
          <a
            href={creator.website_url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            Website
          </a>
        )}
      </div>

      <!-- Source breakdown (clickable filters) -->
      {activeSources.length > 1 && (
        <div class="mt-4 pt-4 border-t border-gray-100">
          <p class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Filter by Source</p>
          <div class="flex flex-wrap gap-2" id="source-filters">
            <button
              type="button"
              data-filter="all"
              class="source-filter active flex items-center gap-1.5 text-sm px-3 py-1 rounded-full border border-gray-300 bg-gray-900 text-white transition-colors"
            >
              All ({tips.length})
            </button>
            {activeSources.map(([source, count]) => {
              const config = sourceConfig[source];
              return (
                <button
                  type="button"
                  data-filter={source}
                  class="source-filter flex items-center gap-1.5 text-sm px-3 py-1 rounded-full border border-gray-200 bg-white text-gray-700 hover:border-gray-400 transition-colors"
                >
                  <span class={config.color}>{config.icon}</span>
                  <span>{config.label}</span>
                  <span class="text-gray-400">({count})</span>
                </button>
              );
            })}
          </div>
        </div>
      )}

      <!-- Single source display (no filtering needed) -->
      {activeSources.length === 1 && (
        <div class="mt-4 pt-4 border-t border-gray-100">
          <p class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Content Source</p>
          <div class="flex items-center gap-1.5 text-sm">
            <span class={sourceConfig[activeSources[0][0]].color}>{sourceConfig[activeSources[0][0]].icon}</span>
            <span class="text-gray-600">{sourceConfig[activeSources[0][0]].label}</span>
            <span class="text-gray-400">({activeSources[0][1]})</span>
          </div>
        </div>
      )}

      <p class="text-sm text-gray-500 mt-4" id="tip-count">{tips.length} tips total</p>
    </header>

    <!-- Topic breakdown -->
    {topicNames.length > 1 && (
      <section class="bg-gray-50 rounded-lg p-4">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">
          Topics
        </h2>
        <div class="flex flex-wrap gap-2">
          {topicNames.map(name => (
            <span class="text-sm bg-white border border-gray-200 px-3 py-1 rounded-full text-gray-700">
              {name} ({tipsByTopic[name].length})
            </span>
          ))}
        </div>
      </section>
    )}

    <!-- All tips -->
    <section>
      <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">
        All Tips
      </h2>
      <div class="space-y-3" id="tips-list">
        {tips.map(tip => (
          <div data-source={tip.source_type} class="tip-item">
            <TipCard tip={tip} />
          </div>
        ))}
      </div>
    </section>
  </div>

  <!-- Progressive enhancement: source filtering -->
  <script>
    const filters = document.getElementById('source-filters');
    const tipsList = document.getElementById('tips-list');
    const tipCount = document.getElementById('tip-count');

    if (filters && tipsList) {
      filters.addEventListener('click', (e) => {
        const button = (e.target as HTMLElement).closest('.source-filter') as HTMLButtonElement;
        if (!button) return;

        const filter = button.dataset.filter;
        const tips = tipsList.querySelectorAll('.tip-item');

        // Update active state
        filters.querySelectorAll('.source-filter').forEach(btn => {
          btn.classList.remove('bg-gray-900', 'text-white', 'border-gray-300');
          btn.classList.add('bg-white', 'text-gray-700', 'border-gray-200');
        });
        button.classList.remove('bg-white', 'text-gray-700', 'border-gray-200');
        button.classList.add('bg-gray-900', 'text-white', 'border-gray-300');

        // Filter tips
        let visibleCount = 0;
        tips.forEach(tip => {
          const tipEl = tip as HTMLElement;
          if (filter === 'all' || tipEl.dataset.source === filter) {
            tipEl.style.display = '';
            visibleCount++;
          } else {
            tipEl.style.display = 'none';
          }
        });

        // Update count
        if (tipCount) {
          tipCount.textContent = `${visibleCount} tip${visibleCount === 1 ? '' : 's'} ${filter === 'all' ? 'total' : 'shown'}`;
        }
      });
    }
  </script>
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TipCard from '../../components/TipCard.astro';
import { creators, getCreatorBySlug, getTipsByCreator, getTopic, getTipCountsBySource, type SourceType } from '../../lib/data';

export function getStaticPaths() {
  return creators.map(creator => ({
    params: { slug: creator.slug },
  }));
}

const { slug } = Astro.params;
const creator = getCreatorBySlug(slug);

if (!creator) {
  return Astro.redirect('/404');
}

const tips = getTipsByCreator(creator.id);
const tipCountsBySource = getTipCountsBySource(creator.id);

// Source metadata for display
const sourceConfig: Record<SourceType, { label: string; icon: string; color: string }> = {
  twitter: { label: 'Twitter/X', icon: 'ð•', color: 'text-gray-900' },
  linkedin: { label: 'LinkedIn', icon: 'ðŸ”—', color: 'text-blue-700' },
  youtube: { label: 'YouTube', icon: 'â–¶', color: 'text-red-600' },
  blog: { label: 'Blog', icon: 'ðŸ“', color: 'text-gray-700' },
};

// Get sources that have tips, sorted by count descending
const activeSources = (Object.entries(tipCountsBySource) as [SourceType, number][])
  .filter(([_, count]) => count > 0)
  .sort((a, b) => b[1] - a[1]);

// Group tips by topic
const tipsByTopic = tips.reduce((acc, tip) => {
  tip.topic_ids.forEach(topicId => {
    const topic = getTopic(topicId);
    if (topic) {
      if (!acc[topic.name]) {
        acc[topic.name] = [];
      }
      if (!acc[topic.name].find(t => t.id === tip.id)) {
        acc[topic.name].push(tip);
      }
    }
  });
  return acc;
}, {} as Record<string, typeof tips>);

const topicNames = Object.keys(tipsByTopic).sort();
---

<BaseLayout
  title={`${creator.name} â€” AI Tips`}
  description={`${tips.length} AI tips from ${creator.name}. ${creator.bio}`}
>
  <div class="space-y-8">
    <!-- Header -->
    <header>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">{creator.name}</h1>
      <p class="text-gray-600 mb-4">{creator.bio}</p>

      <!-- Platform links -->
      <div class="flex flex-wrap gap-3 text-sm">
        {creator.twitter_handle && (
          <a
            href={`https://twitter.com/${creator.twitter_handle}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            @{creator.twitter_handle}
          </a>
        )}
        {creator.linkedin_url && (
          <a
            href={creator.linkedin_url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            LinkedIn
          </a>
        )}
        {creator.youtube_channel && (
          <a
            href={creator.youtube_channel}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            YouTube
          </a>
        )}
        {creator.website_url && (
          <a
            href={creator.website_url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 transition-colors"
          >
            Website
          </a>
        )}
      </div>

      <!-- Source breakdown -->
      {activeSources.length > 0 && (
        <div class="mt-4 pt-4 border-t border-gray-100">
          <p class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Content Sources</p>
          <div class="flex flex-wrap gap-3">
            {activeSources.map(([source, count]) => {
              const config = sourceConfig[source];
              return (
                <div class="flex items-center gap-1.5 text-sm">
                  <span class={config.color}>{config.icon}</span>
                  <span class="text-gray-600">{config.label}</span>
                  <span class="text-gray-400">({count})</span>
                </div>
              );
            })}
          </div>
        </div>
      )}

      <p class="text-sm text-gray-500 mt-4">{tips.length} tips total</p>
    </header>

    <!-- Topic breakdown -->
    {topicNames.length > 1 && (
      <section class="bg-gray-50 rounded-lg p-4">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">
          Topics
        </h2>
        <div class="flex flex-wrap gap-2">
          {topicNames.map(name => (
            <span class="text-sm bg-white border border-gray-200 px-3 py-1 rounded-full text-gray-700">
              {name} ({tipsByTopic[name].length})
            </span>
          ))}
        </div>
      </section>
    )}

    <!-- All tips -->
    <section>
      <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">
        All Tips
      </h2>
      <div class="space-y-3">
        {tips.map(tip => (
          <TipCard tip={tip} />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CreatorCard from '../../components/CreatorCard.astro';
import { creators, getTipsByCreator } from '../../lib/data';

const creatorsWithCounts = creators.map(creator => ({
  ...creator,
  tipCount: getTipsByCreator(creator.id).length,
})).sort((a, b) => b.tipCount - a.tipCount);
---

<BaseLayout
  title="Creators"
  description="AI tips from leading creators including researchers, developers, and educators."
>
  <div class="space-y-8">
    <header>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Creators</h1>
      <p class="text-gray-600">Tips from leading AI practitioners and educators.</p>
    </header>

    <div class="grid gap-4 sm:grid-cols-2">
      {creatorsWithCounts.map(creator => (
        <CreatorCard creator={creator} />
      ))}
    </div>
  </div>
</BaseLayout>
